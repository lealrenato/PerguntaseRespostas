<%- include ("partials/header.ejs"); %>
<body>
  <%- include ("partials/navbar.ejs"); %>
  <div class="container">
    <h1>Perguntas</h1>

    <% perguntas.forEach(pergunta => { %>
    <br />
    <div class="card">
      <div class="card-body">
        <h3>
          <span class="badge bg-secondary badgeclass">#<%=pergunta.id%></span
          ><%=pergunta.titulo%>
        </h3>
      </div>
      <div class="card-footer">
        <a href="/pergunta/<%=pergunta.id%> " class="btn btn-primary"
          >Responder</a
        >
      </div>
    </div>
    <% }); %>
  </div>
  <%- include ("partials/footer.ejs"); %>
</body>

<%- include ("partials/importacoes.ejs"); %>
