<%- include ("partials/header.ejs"); %>
<body>
  <%- include ("partials/navbar.ejs"); %>

  <div class="container">
    <h1> 
      <span class="badge bg-secondary badgeclass">#<%=pergunta.id%>
      </span> <%= pergunta.titulo %>
    </h1>
    <p><%= pergunta.descricao %> </p>

    <form method="POST" action="/responder">
      <h3>Responda</h3>
      <label for="">Resposta</label>
      <textarea placeholder="contribua com uma resposta" class="form-control form-res" name="corpo"></textarea>
      <input type="hidden" name="pergunta" value="<%=pergunta.id%>">
      <button type="submit" class="btn btn-primary">Responder</button>
    </form>

    <hr>
    <h3>Respostas</h3>
    <hr>
    
    <% respostas.forEach(resposta => { %>

      <h5><%= resposta.corpo %></h5>
      <hr>

    <% }) %>

  </div>
  





  <%- include ("partials/footer.ejs"); %>
</body>

<%- include ("partials/importacoes.ejs"); %>
